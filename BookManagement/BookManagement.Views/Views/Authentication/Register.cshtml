@model BookManagement.Views.Models.AuthenticationModel

<h1>ĐĂNG KÝ TÀI KHOẢN</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Authentication" asp-action="Register">
            <h4>Điền thông tin để tạo tài khoản mới.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" asp-for="SignUpUser.Email"/>
                @* <span asp-validation-for="Input.UserName" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" asp-for="SignUpUser.FullName"/>
                @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" asp-for="SignUpUser.Password"/>
                @* <span asp-validation-for="Input.Password" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" asp-for="SignUpUser.ConfirmPassword"/>
                @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
            </div>
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </form>
    </div>
</div>

